{
  "name": "danil42russia/phpstan-kphp",
  "type": "phpstan-extension",
  "require": {
    "php": "^7.4 || ^8.0",
    "phpstan/phpstan": "^1.9",
    "vkcom/kphp-polyfills": "^1.0"
  },
  "require-dev": {
    "phpstan/phpstan-phpunit": "^1.3",
    "phpunit/phpunit": "^9.6"
  },
  "autoload": {
    "psr-4": {
      "KphpPHPStan\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "KphpTests\\": "tests/"
    },
    "classmap": [
      "tests/"
    ]
  },
  "extra": {
    "phpstan": {
      "includes": [
        "extension.neon"
      ]
    }
  },
  "scripts": {
    "test:unit": "vendor/bin/phpunit --configuration tests/phpunit.xml"
  },
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true
}
